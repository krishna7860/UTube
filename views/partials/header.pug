header.header
    div.header__column
        a(href=routes.home)
            i.fas.fa-play
    .header__column
        form(action=routes.search, method="get")
            input(type="text", placeholder="Seach Video" name="query")
    div.header__column
        ul
            if !user.isAuthenticated
                li
                    a(href=routes.join) Join
                li
                    a(href=routes.login) Login
            else
                li
                    a(href=`/videos${routes.upload}`) Upload
                li
                    a(href=routes.userProfile(user.id)) Profile
                li
                    a(href=routes.logout) Log Out
